<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nikhita.com.calculator1.MainActivity">

   <EditText
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/no"
       android:hint="Enter 1st no"
       android:layout_margin="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/no1"
        android:hint="Enter 2nd no"
        android:layout_margin="10dp"
        android:layout_below="@+id/no"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/no1"
        android:id="@+id/b1"
        android:text="+"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:id="@+id/b2"
        android:layout_alignTop="@+id/b3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:id="@+id/b3"
        android:layout_alignTop="@+id/b4"
        android:layout_toLeftOf="@+id/b2"
        android:layout_toStartOf="@+id/b2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/b4"
        android:layout_below="@+id/no1"
        android:layout_toRightOf="@+id/b1"
        android:layout_toEndOf="@+id/b1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result:"
        android:textSize="25sp"
        android:id="@+id/textView"
        android:layout_below="@+id/b1"
        android:layout_alignLeft="@+id/no1"
        android:layout_alignStart="@+id/no1"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv"
        android:layout_alignBottom="@+id/textView"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
